<h1>Editing Book</h1>
<%= form_with model:@book, url:update_book_path, local:true do |f| %>
<div class="field">
  <label for="book_title">Title</label>
  <br><%= f.text_field :title %>
</div>
<div class="field">
  <label for="book_body">Body</label>
  <br><%= f.text_area :body %>
</div>
<div class="actions">
<%= f.submit "Update book" %>
</div>
<br><%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", "/Books" %>
 <% end %>
 </div>