<h1>Books</h1>
 <table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thread>
    <% @books.each do |book| %>
  <thread>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show", book_path(book.id) %></th>
      <th><%= link_to "Edit", edit_book_path(book.id) %></th>
      <th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"  %></th>
    </tr>
  </thread>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

<% if @book.errors.any? %>
  <div id="error-explanation">
  <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li>
    <%= message %>
  <% end %>
    </li>
  </ul>
  </div>
<% end %>

<div class="field">
  <div class="field_with_errors">
  <label for="book_title">Title</label>
  </div>
  <br><%= f.text_field :title %>
</div>
<div class="field">
  <div class="field_with_erroes">
  <label for="book_body">Body</label>
  </div>
  <br><%= f.text_area :body %>
</div>
<div class="actions">
<%= f.submit "Create Book" %>
</div>
 <% end %>